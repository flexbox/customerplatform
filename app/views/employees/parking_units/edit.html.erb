<p>employees::parking_units::edit</p>

<h3>Project: <%= "#{@project.commercial_name} (#{@project.internal_name})" %></h3>
<h3>Phase: <%= "#{@phase.phase_number}" %></h3>
<h3>Lot: <%= "#{@lot.lot_number}" %></h3>

<h4>Edit Parking Unit</h4>

<%= simple_form_for(@pu, url: employees_project_parking_unit_path) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parking_name %>
    <%= f.input :unit_id, collection: @unitscollection, label_method: :unit_name, value_method: :id, label: "Unit", include_blank: true, selected: @pu.unit_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_parking_unit_path %>

<!-- first part of documents official -->


  <div class="container">
  <div class="documents-space">
    <div class="row">
      <div class="document-title">
        <h3>Official</h3>
      </div>
    </div>

    <div class="row">
      <div class="ui link cards">

        <% @documents.each do |document| %>
        <div class="ui card">

          <a class="image" href="<%= cl_image_path(document.file,  resource_type: "raw") %>" target="_tab">
            <img src="http://unsplash.it/150/150">
            </a>

          <div class="content">
            <a class="header" href= '#' target="_tab"><%= document.title %>
            </a>
            <div class="meta">
              <a><%= document.description %></a>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>



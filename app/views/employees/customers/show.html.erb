<div>
  <p>Employees > Customers > Show</p>
  <hr>
</div>

<p>First name:    <%= @customer.first_name %>   </p>
<p>Las name:      <%= @customer.last_name %>    </p>
<p>Address:       <%= @customer.address %>      </p>
<p>Birthday:      <%= @customer.birthday %>     </p>
<p>Phone number:  <%= @customer.phone_number %> </p>
<p>Mobile number: <%= @customer.mobile_number %></p>
<p>Email:         <%= @customer.email %>        </p>
<p>IBAN:          <%= @customer.iban %>         </p>
<p>Welcome box:   <%= @customer.welcome_box %>  </p>
<p>Notes:         <%= @customer.notes %>        </p>
<p>Used hours:    <%= @customer.used_hours %>   </p>
<p>Signing date:  <%= @customer.signing_date %> </p>
<p>Deed date:     <%= @customer.deed_date %>    </p>
<%unless  @customer.picture.nil? || @customer.picture.url.nil?%>
  <p>Picture
    <%= image_tag @customer.picture.url(:std)%>
  </p>
<% end %>

<p><strong>Units:</strong> </p>
<% if @units.nil? || @units.empty? %>
  <p>This customer has no unit !</p>
<% else %>
  <% @units.each do |unit| %>
    <p><%= unit.unit_name %>
    (Project <%= unit.building.lot.phase.project.commercial_name %>,
     Phase <%= unit.building.lot.phase.phase_number %>)
    </p>
  <% end %>
<% end %>

<%= link_to "Consulting hours", employees_customer_consulting_hours_path(@customer) %>
<%= link_to "Back", employees_customers_path %>
<hr>
<hr>
<hr>

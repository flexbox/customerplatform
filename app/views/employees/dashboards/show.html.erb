<% icons = { open: "open.png", closed: "closed.png" } %>


<div class="container">

  <% if @employee_projects.any? %>
    <div class="row">
      <h3> Your Projects <%= link_to "New Project", new_employees_project_path, remote: true, class: "btn btn-warning"%></h3>
      <% @employee_projects.each do |project| %>
          <div class="col-xs-12 col-sm-4">
          <%  %>
            <div class="thumbnail">
              <div class="caption text-center">
                <h3><%= project.internal_name %></h3>
                <p><%= project.description %></p>
                <p>
                  <%= link_to "Phases",  employees_project_phases_path(project), class: "btn btn-normal" %>
                  <%= link_to "Details",  employees_project_path(project), class: "btn btn-normal" %>
                </p>
              </div>
            </div>

          </div>
      <% end %>

    </div>
  <% end %>



</div>


<!-- Modal -->
<div class="modal fade" id="newprojectModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

    </div>
  </div>
</div>

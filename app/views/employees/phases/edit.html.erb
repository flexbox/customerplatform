<p>Employee::Phase::Edit</p>

<h1>Project: <%= "#{@project.commercial_name} (#{@project.internal_name})" %></h1>

<%= simple_form_for(@phase, url: employees_project_phase_path(@project, @phase) ) do |f| %>

  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :phase_number %>
    <%= f.input :description %>
    <%= f.input :duration %>
    <%= f.input :picture, label: "Replace picture" %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= image_tag @phase.picture.url(:small) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_phase_path(@project, @phase) %>

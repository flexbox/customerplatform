              <% @timeline.each do |payment| %>
                <% if payment.status == "future payment" %>

                  <li class="li">
                    <div class="timestamp">
                      <span class="author">ID: <%= payment.id %></span>
                      <span class="date"><%= payment.due_date %></span>
                    </div>
                    <div class="status">
                      <h4> <%= payment.status %> </h4>
                    </div>
                  </li>

                <% else %>

                  <li class="li complete">
                    <div class="timestamp">
                      <span class="author">ID: <%= payment.id %></span>
                      <span class="date"><%= payment.due_date %></span>
                    </div>
                    <div class="status">
                      <h4> <%= payment.status %> </h4>
                    </div>
                  </li>

                <% end %>

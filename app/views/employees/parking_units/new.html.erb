<div>
  <p>
    Employees > Projects <%= @project.commercial_name %> >
    Phases <%= @phase.phase_number %> >
    Lots <%= @lot.lot_number %> >
    Parking Units > New
    <hr>
  </p>
  <hr>
</div>

<%= simple_form_for(@pu, url: employees_project_parking_units_path) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parking_name %>
    <%= f.input :unit_id, collection: Unit.order("unit_name ASC"), label_method: :unit_name, value_method: :id, label: "Unit", include_blank: true, selected: @pu.unit_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_parking_units_path %>

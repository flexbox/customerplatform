<div>
  <p>
    Employees > Projects <%= @project.commercial_name %> >
    Phases <%= @phase.phase_number %> >
    Lots > New
    <hr>
  </p>
  <hr>
</div>

<%= simple_form_for(@lot, url: employees_project_lots_path) do |f| %>

  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :lot_number %>
    <%= f.input :description %>
    <%= f.input :cadastral_reference %>
    <%= f.input :lot_size %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_lots_path %>

<div>
  <p>
    Employees > Projects <%= @project.commercial_name %> >
    Phases <%= @phase.phase_number %> >
    Lots <%= @lot.lot_number %> >
    Buildings <%= @building.building_name %> > Edit
    <hr>
  </p>
  <hr>
</div>


<%= simple_form_for(@building, url: employees_project_building_path) do |f| %>

  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :building_name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :floors %>
    <%= f.input :shared_space %>
    <%= f.input :elevator_amount %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_building_path %>

<div class="distance">
  <div class="container">
    <!-- Row -->
    <div class="row">
      <!-- Payment Card col -->

      <% @payments.each do |payment| %>
        <div class="col-xs-12 col-sm-4">

          <div class="card bottom-margin">

            <div class="card-height-setter"></div>

            <div class="card-content">

              <div class="text-center">
                <h3>
                  <%= payment.name %>
                </h3>
              </div>

              <div class="card-body">

                <p>
                  <strong>Status:</strong> <%= payment.status %>
                </p>
                <p>
                  <strong>Details:</strong><%= payment.description %>
                </p>
                <p>
                  <strong>Amount:</strong> <%= payment.amount %>
                </p>
                <p>
                  <strong>Due:</strong> <%= payment.due_date %>
                </p>


              </div>

              <footer class="card-footer card-footer-bottom">
                <% @document = Document.find(payment.document_id) %>
                <% unless @document.nil? || @document.file.nil? || @document.file == '' %>
                    <% pdf = cl_image_path(@document.file, resource_type: "raw") %>
                    <%= link_to pdf do %>
                  <button class="btn btn-flat btn-primary">
                    Download invoice
                  </button>
                  <% end %>
                <% end %>
              </footer>

            </div>

          </div>

        </div>
      <% end %>
      <!-- END Payment Card col -->

    </div>
    <!-- END Row -->

  </div>
</div>

<p>employees::buildings::edit</p>

<h1>Project: <%= "#{@project.commercial_name} (#{@project.internal_name})" %></h1>
<h2>Phase: <%= "#{@phase.phase_number}" %></h2>
<h3>Lot: <%= "#{@lot.lot_number}" %></h3>

<h4>Edit Building</h4>

<%= simple_form_for(@building, url: employees_project_building_path) do |f| %>

  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :building_name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :floors %>
    <%= f.input :shared_space %>
    <%= f.input :elevator_amount %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_building_path %>

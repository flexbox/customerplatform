<p>employees::storage_units::edit</p>

<h3>Project: <%= "#{@project.commercial_name} (#{@project.internal_name})" %></h3>
<h3>Phase: <%= @phase.phase_number %></h3>
<h3>Lot: <%= @lot.lot_number %></h3>
<h3>Building: <%= @building.building_name %></h3>

<h4>Edit Storage Unit <%= @su.storage_name %></h4>

<%= simple_form_for(@su, url: employees_project_storage_unit_path) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :storage_name %>
    <%= f.input :storage_size %>
    <%= f.input :unit_id, collection: @unitcollection, label_method: :unit_name, value_method: :id, label: "Unit", include_blank: true, selected: @su.unit_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', employees_project_storage_unit_path %>

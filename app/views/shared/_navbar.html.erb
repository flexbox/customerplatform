<div class="navbar">

  <!-- Logo -->
  <div>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-revive-white.svg" %>
    <% end %>
  </div>

  <!-- Middle Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to t(".dashboard", default: "Dashboard "), customers_dashboard_path(@unit), class: "navbar-wagon-item navbar-wagon-link active" %>

    <!-- News -->
    <%= link_to t(".news", default: "News"), customers_unit_news_index_path(@unit), class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Decisions -->
    <%= link_to t(".decisions", default: "Decisions"), customers_unit_decisions_path(@unit), class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Site Visits -->
    <%= link_to t(".site visits", default: "Events"), customers_unit_site_visits_path(@unit), class: "navbar-wagon-item navbar-wagon-link" %>



    <!-- Payments -->
    <%= link_to t(".payments", default: "Payments"), customers_unit_payments_path(@unit), class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Documents -->
    <%= link_to t(".documents", default: "Documents"), customers_unit_documents_path(@unit), class: "navbar-wagon-item navbar-wagon-link" %>
  </div>


  <!-- Profile picture and dropdown -->
  <div class="avatar-navbar-padding">

    <div class="navbar-wagon-right">
      <div class="name-navbar">  <%= current_customer.first_name.capitalize %> </div>

      <div class="dropdown">
        <%= cl_image_tag current_customer.picture, class: "avatar-navbar avatar-navbar-bordered dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

 <!--        <li>
          <%#= link_to edit_customer_registration_path do %>
            <i class="fa fa-user"></i> <%#= t(".profile", default: "Profile") %>
          <%# end %>
        </li> -->
        <li>
          <%= link_to destroy_customer_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>

    </div>
</div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">

    <div class="dropdown">

      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>

  </div>

</div>


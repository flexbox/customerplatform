<div class="container">

  <div class="sitevisits-wrapper">

    <div class="container">

      <div class="sitevisits-space">

        <div class="sitevisits-title">

          <div class="row">
            <% @sitevisits.each do |visit| %>

            <div class="col-md-4">

              <div class="card">

                <div class="card-height-indicator">

                  <div class="card-content">

                    <div class="card-image">

                      <h3 class="card-image-headline"><%= visit.title %></h3>
                    </div>
                    <div class="card-body">
                      <h3><%= visit.date %></h3>
                      <h4><%= visit.description %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div id="map" style="width: 100%; height: 600px; "></div>

  <% content_for(:after_js) do %>
  <%= javascript_tag do %>
  $(document).on('ready', function() {
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: { id: 'map' } }, function() {
  markers = handler.addMarkers(<%= raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  if (markers.length == 0) {
  handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>




</div>


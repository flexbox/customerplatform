<div>
  <p>
    Employees > Projects <%= @project.commercial_name %> >
    Phases <%= @phase.phase_number %> >
    News > Edit
    <hr>
  </p>
  <hr>
</div>

<%= simple_form_for(@news, url: employees_project_news_path ) do |f| %>

  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back',  employees_project_news_path %>

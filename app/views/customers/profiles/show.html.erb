
<div class="wrapper-green">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-2">

      <div class="card-signup">
      <h2>Edit your account </h2>

        <%= simple_form_for(@user, url: customers_profile_path(@user), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, disabled: true %>
          <%= f.input :last_name, disabled: true %>
          <%= f.input :phone_number, autofocus: true %>
          <%= f.input :mobile_number, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>

          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", :class=>"btn btn-success btn-shared-devise" %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

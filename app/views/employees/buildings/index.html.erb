<div>
  <p>
    Employees > Projects <%= @project.commercial_name %> >
    Phases <%= @phase.phase_number %> >
    Lots <%= @lot.lot_number %> >
    Buildings > Index
    <hr>
  </p>
  <hr>
</div>

<div class="container">

  <div class="row">
    <h3>
      Buildings <%= link_to "New building", new_employees_project_building_path(@project.id) , class: "btn btn-warning"%>
    </h3>
      <% if @buildings.nil? || @buildings.empty? %>
        <p>There is no building for this project yet.</p>
      <% else %>
        <% @buildings.each do |building| %>
          <div class="col-xs-12 col-sm-4">
            <div class="thumbnail">
              <div class="caption text-center">
                <h3><%= building.building_name %></h3>
                <p><strong>Description: </strong><%= building.description %></p>
                <% save_phase(building.lot.phase) %>
                <%= link_to "Units", employees_project_units_path(@project.id), class: "btn btn-normal"%>
                <%= link_to "Storage Units", employees_project_storage_units_path, class: "btn btn-normal" %>
                <%= link_to "Details", employees_project_building_path(@project.id, building), class: "btn btn-normal" %>
              </div>
            </div>

          </div>
      <% end %>

    </div>
  <% end %>



</div>

